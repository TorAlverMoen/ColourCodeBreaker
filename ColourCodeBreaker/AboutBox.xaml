<Window x:Class="ColourCodeBreaker.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColourCodeBreaker" mc:Ignorable="d" Background="#444444" Foreground="LightGray"
        Title="AboutBox" Height="280" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Colour Code Breaker" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Top"/>
        <Label x:Name="labelVersion" Content="[version]" HorizontalAlignment="Center" Margin="0, 70" Foreground="LightGray" VerticalAlignment="Top"/>
        <TextBlock x:Name="copyright" Text="&#169; 2024 Tor Alver Moen" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="textInfo" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Center">
            Made in C# (WPF) with Visual Studio Community, <LineBreak/>Blender and Unreal Engine 5 (offline render)
        </TextBlock>
        <Button x:Name="btnCloseAbout" Content="OK" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" Click="btnCloseAbout_Click"/>
    </Grid>
</Window>
