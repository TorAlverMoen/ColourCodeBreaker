<Window x:Class="ColourCodeBreaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColourCodeBreaker" mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="900" Background="#444444" Foreground="LightGray">
    <Grid Height="450" Width="900">
        <Label Content="Colour code breaker" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="LightGray" FontSize="24"/>
        <GroupBox x:Name="groupBox_Colours" Header=" Choose colours " Foreground="LightGray" Margin="40,60" HorizontalAlignment="Left" VerticalAlignment="Top" Height="230" Width="510" BorderThickness="0.4">
            <Grid>
                <Button x:Name="btnRed" Margin="20,20,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Red" BorderBrush="Black"/>
                <Button x:Name="btnGreen" Margin="20,50,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Green" BorderBrush="Black"/>
                <Button x:Name="btnYellow" Margin="20,80,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Yellow" BorderBrush="Black"/>
                <Button x:Name="btnOrange" Margin="20,110,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Orange" BorderBrush="Black"/>
                <Button x:Name="btnBlue" Margin="20,140,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Blue" BorderBrush="Black"/>
                <Button x:Name="btnWhite" Margin="20,170,0,0" Height="20" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" BorderBrush="Black"/>
                <Button x:Name="btnPG1" Content="1" FontSize="24" Margin="100,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="80" Background="DimGray" Foreground="White"/>
                <Button x:Name="btnPG2" Content="2" FontSize="24" Margin="200,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="80" Background="DimGray" Foreground="White"/>
                <Button x:Name="btnPG3" Content="3" FontSize="24" Margin="300,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="80" Background="DimGray" Foreground="White"/>
                <Button x:Name="btnPG4" Content="4" FontSize="24" Margin="400,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="80" Background="DimGray" Foreground="White"/>
                <Button x:Name="btnConfirm" Content="Confirm choice" FontSize="14" Margin="360,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="120"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox_History" Header=" History " Margin="580,60,0,0" BorderThickness="0.4" Foreground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Height="335">
            <Grid x:Name="HistoryGrid">

            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox_Info" Header="Game Information" HorizontalAlignment="Left" Margin="40,300,0,0" VerticalAlignment="Top" Height="50" Width="510" BorderThickness="0.4">
            <Label x:Name="label_Info" Content="Lorem ipsum dolor sit amet, consectetur adipiscing elit" Foreground="LightGray"/>
        </GroupBox>
        <Button x:Name="btnDifficulty" Content="Change difficulty" HorizontalAlignment="Left" Margin="70,365,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="14"/>
        <Button x:Name="btnNewGame" Content="New game" HorizontalAlignment="Left" Margin="230,365,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="14"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="390,365,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="14"/>
    </Grid>
</Window>
